#include<stdio.h>
#include<math.h>
main()
{
 float n;
 float r;
  printf("Enter the number:");
//The number which has to form the pair of its half value
 scanf("%f",&n);
r=fmod(n,2.0);
 if(r==0)
{
  printf("The half value pair of %0.1f is: (%0.1f,%0.1f)",n,n/2,n/2);
}else if(r==1)
{
 printf("The half value pair of %0.1f is: (%0.1f,%0.1f)",n,n/2,n/2);
}}
 
